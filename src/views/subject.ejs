      crossorigin="anonymous"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      select {
        display: block;
        outline: none;
        cursor: pointer;
      }
      .btn{
        display: none;
      }
    </style>
  </head>
  <body>
    <a class="ms-5" href="/home" style="font-family: 'Poppins';
  font-style: normal;
  font-weight: 500;
  font-size: 25px;
  line-height: 38px;
  text-decoration: none;
  color: black;"> <img src="https://cdn-icons-png.flaticon.com/512/271/271218.png" width="24" alt=""> Orqaga</a>

    <div class="container">
      <h1>Assosiy Imtihonga hush kelibsiz</h1>

      <form method="post" action="/insitut" enctype="application/x-www-form-urlencoded">
        <label for="first">Birinchi fanni tanlang:</label>
        <select id="first" name="subject_name1" required class="form-control w-25">
          <option selected disabled>Tanlash</option>
        </select>
        
        <label class="mt-3" for="second">Ikkinchi fanni tanlang:</label>
        <select name="subject_name2" required id="second" class="form-control w-25">
          <option selected disabled>Tanlash</option>
        </select>

        <button id="btn" class="btn btn-primary mt-2">Submit</button>
      </form>
    </div>

    <script>


      var subjectObject = {
        "Matematika": {
          "Fizika": [],
          "Geometriya": []
        },
        "Ingliz tili": {
          "Ona tili": []
        },
        "Kimyo": {
          "Bialogiya": []
        }
      };

      window.onload = function () {
        var first = document.getElementById("first");
        var second = document.getElementById("second");
        var btn = document.getElementById("btn");

        for (var x in subjectObject) {
          // console.log(x);
          first.options[first.options.length] = new Option(x);
        }
        
        first.onchange = function () {
          second.length = 1;

          second.style.display = "block";

          for (var y in subjectObject[this.value]) {
            second.options[second.options.length] = new Option(y);
          }
        };

        second.onchange = function () {
          btn.style.display = "block";
        };
      
      };
    </script>
  </body>
</html>
